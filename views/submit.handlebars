<div class="row">
    {{#unless user}}
        <div class="col-lg-6 offset-lg-3">
            <h1 class="text-center">Sign in</h1>
            <form action="/users/signin" method="post">
                <div class="form-group row">
                    <label for="username" class="col-lg-2 col-form-label">Username</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="username" name="username">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-lg-2 col-form-label">Password</label>
                    <div class="col-lg-10">
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Sign in</button>
            </form>
        </div>
    {{else}}
        <div class="col-lg-6 offset-lg-3">
            <h1 class="text-center">Submit</h1>
            <form action="#" method="post">
                <div class="form-group row">
                    <label for="category" class="col-lg-2 col-form-label">Category</label>
                    <div class="col-lg-10">
                        <select class="form-control" id="category" name="category">
                            <option value="MA">MA</option>
                            <option value="CS">CS</option>
                            <option value="PH">PH</option>
                            <option value="BI">BI</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="number" class="col-lg-2 col-form-label">Number</label>
                    <div class="col-lg-10">
                        <input type="number" class="form-control" id="number" name="number" min="1">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="answer" class="col-lg-2 col-form-label">Answer</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="answer" name="answer">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit Answer</button>
            </form>
        </div>
    {{/unless}}
</row>