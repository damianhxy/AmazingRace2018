<div class="row">
    {{#unless user}}
        <div class="col-lg-6 offset-lg-3">
            <h1 class="text-center">Sign in</h1>
            <form action="/users/signin" method="post">
                <div class="form-group row">
                    <label for="username" class="col-lg-2 col-form-label">Username</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="username" name="username">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-lg-2 col-form-label">Password</label>
                    <div class="col-lg-10">
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Sign in</button>
            </form>
        </div>
    {{else}}
        <div class="col-lg-6 offset-lg-3">
            <h1 class="text-center">Submit</h1>
            <form action="/submit" method="post">
                <div class="form-group row">
                    <label for="question" class="col-lg-2 col-form-label">Question</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="question" name="question" placeholder="AA99" pattern="[A-Z]{2}[0-9]{2}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="answer" class="col-lg-2 col-form-label">Answer</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="answer" name="answer" required>
                        <span class="text-muted">Trailing whitespace will be trimmed</span>
                    </div>
                </div>
                <button type="submit" class="btn btn-success"><i class="fas fa-clipboard-check"></i> Submit</button>
            </form>
        </div>
    {{/unless}}
</row>