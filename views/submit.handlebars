<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <h1 class="text-center">Submit</h1>
        <form action="/submit" method="post">
            <div class="form-group row">
                <label for="question" class="col-lg-2 col-form-label">Question</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="question" name="question" placeholder="AA99" pattern="[A-Z]{2}[0-9]{2}" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="answer" class="col-lg-2 col-form-label">Answer</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="answer" name="answer" required>
                    <span class="text-muted">Trailing whitespace will be trimmed</span>
                </div>
            </div>
            <button type="submit" class="btn btn-success"><i class="fas fa-paper-plane"></i> Submit</button>
        </form>
    </div>
</div>