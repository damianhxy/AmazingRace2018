<div class="row">
    <div class="col-lg-6 offset-lg-3 text-center">
        <h1 class="text-center">User Information</h1>
        <dl class="row">
            <dt class="col-lg-6">Name</dt>
            <dd class="col-lg-6">{{data.name}}{{#if data.admin}} <span class="text-info">Admin</span>{{/if}}</dd>
            <dt class="col-lg-6">Username</dt>
            <dd class="col-lg-6">{{data.username}}</dd>
            <dt class="col-lg-6">Email</dt>
            <dd class="col-lg-6">{{data.email}}</dd>
            <dt class="col-lg-6">Class</dt>
            <dd class="col-lg-6">{{data.class}}</dd>
            <dt class="col-lg-6">Phone</dt>
            <dd class="col-lg-6">{{data.phone}}</dd>
            <dt class="col-lg-6">Stars</dt>
            <dd class="col-lg-6">{{data.score}}</dd>
            <dt class="col-lg-6">Solved Problems</dt>
            <dd class="col-lg-6">
                {{#unless data.solved}}
                No problems solved yet!
                {{else}}
                <ul class="list-inline">
                {{#each data.solved}}
                    <li class="list-inline-item">{{this}}</li>
                {{/each}}
                </ul>
                {{/unless}}
            </dd>
        </dl>
        {{#if user.admin}}
        <div class="btn-group">
            <form action="/users/{{data.username}}?_method=DELETE" method="post" class="adminForm">
                <button type="submit" class="btn btn-danger" {{#if data.admin}}disabled{{/if}}><i class="fas fa-user-times"></i> Delete User</button>
            </form>
            <form action="/users/{{data.username}}?_method=PUT" method="post" class="adminForm">
                <button type="submit" class="btn btn-warning"><i class="fas fa-trash"></i> Clear Solved</button>
            </form>
        </div>
        {{/if}}
    </div>
</div>