<div class="row">
    <div class="col-lg-6 offset-lg-3 text-center">
        <h1 class="text-center">User Information</h1>
        <dl class="row">
            <dt class="col-lg-6">Username</dt>
            <dd class="col-lg-6">{{data.username}}</dd>
            <dt class="col-lg-6">Email</dt>
            <dd class="col-lg-6">{{data.email}}</dd>
            <dt class="col-lg-6">Class</dt>
            <dd class="col-lg-6">{{data.class}}</dd>
            <dt class="col-lg-6">Phone</dt>
            <dd class="col-lg-6">{{data.phone}}</dd>
            <dt class="col-lg-6">Score</dt>
            <dd class="col-lg-6">{{data.score}}</dd>
            <dt class="col-lg-6">Solved Problems</dt>
            <dd class="col-lg-6">
                {{#unless data.solved}}
                No problems solved yet!
                {{else}}
                <ul class="list-inline">
                {{#each data.solved}}
                    <li class="list-inline-item">{{this}}</li>
                {{/each}}
                </ul>
                {{/unless}}
            </dd>
        </dl>
        {{#if user.admin}}
        <form action="/users/{{data.username}}?_method=DELETE" method="post">
            <button type="submit" class="btn btn-danger">Delete User</button>
        </form>
        {{/if}}
    </div>
</div>